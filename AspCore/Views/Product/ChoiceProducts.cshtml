@using DataLayer.Enums;
@{
    ViewData["Title"] = "ChoiceProducts";
}

<h1>ChoiceProducts</h1>



@using (Html.BeginForm("ShowProducts", "Product", FormMethod.Post))
{
<p>
    @Html.DropDownList("category", Html.GetEnumSelectList(typeof(CategoryType)), CategoryType.All)
</p>
    <p>
        <label>Min price</label><br />
        <input type="number" name="minPrice" />
    </p>
    <p>
        <label>Max price</label><br />
        <input type="number" name="maxPrice" />
    </p>
    <p>
        <input type="submit" value="Отправить" />
    </p>
}
